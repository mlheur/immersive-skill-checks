<?xml version="1.0" encoding="iso-8859-1"?>
<root>
	<!-- the main utility window that has dressings, buttons and a main
	     panel for displaying all the skill roll results -->
	<windowclass name="ISC_resultswindow">

		<frame>utilitybox</frame>
		<placement><size width="480" height="400" /></placement>
		<sizelimits>
			<minimum width="480" height="400" />
			<dynamic />
		</sizelimits>
		<playercontrol />
		<nodelete />
		<script file="scripts/ISC_resultswindow.lua" />
		<sheetdata>
			<close_utilitybox />
			<windowtitlebar name="title">
				<resource>ISC_resultswindow_title</resource>
			</windowtitlebar>

			<anchor_title_utilitybox name="resultswindow" />

			<!-- all the buttons -->
			<button_text name="ISC_button_skillset">
				<anchored to="resultswindow" height="20" width="100">
					<right offset="-10" />
					<bottom parent="" offset="-30" />
				</anchored>
				<state textres="ISC_button_label_skillset" />
			</button_text>
			
			<button_text name="ISC_button_rollnow">
				<anchored to="resultswindow" height="20" width="100">
					<right offset="-130" />
					<bottom parent="" offset="-30" />
				</anchored>
				<state textres="ISC_button_label_rollnow" />
			</button_text>

			<button_checkbox name="ISC_bAutoRoll" source="ISC_bAutoRoll">
				<anchored to="resultswindow" height="20" width="20">
					<left offset="5" />
					<bottom parent="" offset="-30" />
				</anchored>
			</button_checkbox>
			<button_text name="ISC_label_autoroll">
				<state textres="ISC_button_label_autoroll" />
				<anchored to="resultswindow" height="20" width="100">
					<left offset="30" />
					<bottom parent="" offset="-30" />
				</anchored>
			</button_text>

			<!-- the main panel -->
			<genericcontrol name="ISC_results_panel">
				<anchored to="resultswindow">
					<top anchor="bottom" offset="20" />
					<left offset="10" />
					<right offset="-10" />
					<bottom parent="" offset="-80" />
				</anchored>
				<frame name="groupbox" offset="15,15,15,15" />
				<disabled />
			</genericcontrol>

			<windowlist name="ISC_results_list">
				<anchored to="ISC_results_panel">
					<left />
					<top offset="30"/>
					<right />
					<bottom />
				</anchored>
				<columns filldown="true" />
				<class>ISC_results_character</class>
				<datasource>combattracker.list</datasource>
				<skipempty />
			</windowlist>
			<scrollbar_list>
				<anchored to="ISC_results_list" />
				<target>ISC_results_list</target>
			</scrollbar_list>

			<!-- the title row of skill names -->
			<genericcontrol name="skillname_anchor">
				<anchored to="ISC_results_panel" height="20">
					<top offset="5" />
					<left offset="160" />
				</anchored>
			</genericcontrol>
			<windowlist name="ISC_results_skillnames">
				<anchored to="skillname_anchor" position="right" />
				<columns fillwidth="true" width="60"/>
				<class>ISC_skillresult_title</class>
				<datasource>ISC.skill-titles</datasource>
				<skipempty />
			</windowlist>

		</sheetdata>
	</windowclass>

	<!-- a window containing the character name and a list of skill roll results -->
	<windowclass name="ISC_results_character">
		<margins control="0,0,0,0" />
		<!--frame>groupbox</frame-->
		<sizelimits><dynamic /></sizelimits>
		<sheetdata>

			<!-- the character name -->
			<stringfield name="name">
				<right />
				<disabled />
				<bounds>8,8,96,32</bounds>
				<font>sheetlabel</font>
			</stringfield>
			<!-- the character portrait -->
			<tokenfield name="token">
				<bounds>112,8,32,32</bounds>
				<empty>token_empty</empty>
			</tokenfield>

			<!-- the horizontal list of skill roll results -->
			<genericcontrol name="listanchor">
				<bounds>160,0,0,48</bounds>
			</genericcontrol>
			<windowlist name="ISC_results_skillresult_list">
				<anchored to="listanchor" position="right" />
				<columns fillwidth="true" width="60"/>
				<class>ISC_skillresult_die</class>
				<skipempty />
			</windowlist>
		</sheetdata>
	</windowclass>

	<!-- The die roll result on display -->
	<windowclass name="ISC_skillresult_die">
		<margins control="0,0,0,4" />
		<placement><size width="60" height="48" /></placement>
		<datasource>results</datasource>
		<sheetdata>
			<stringfield name="label">
				<bounds>0,0,60,18</bounds>
				<center />
				<static />
			</stringfield>
			<basicnumber name="total">
				<bounds>15,22,30,18</bounds>
			</basicnumber>
		</sheetdata>
	</windowclass>

	<!-- The skillname above the die roll result -->
	<windowclass name="ISC_skillresult_title">
		<margins control="0,0,0,0" />
		<placement><size width="60" height="20" /></placement>
		<sheetdata>
			<stringfield name="name">
				<bounds>0,0,60,18</bounds>
				<center />
				<static />
			</stringfield>
		</sheetdata>
	</windowclass>


</root>