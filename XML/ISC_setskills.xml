<?xml version="1.0" encoding="iso-8859-1"?>
<root>
	<windowclass name="ISC_setskills_window">
		<frame>utilitybox</frame>
		<placement><size width="480" height="400" /></placement>
		<sizelimits>
			<minimum width="480" height="400" />
			<dynamic />
		</sizelimits>
		<playercontrol />
		<nodelete />
		<script file="scripts/ISC_setskills.lua" />
		<sheetdata>
			<close_utilitybox />
			
			<windowtitlebar name="title">
				<resource>ISC_setskills_window_title</resource>
			</windowtitlebar>
			
			<anchor_title_utilitybox name="contentanchor" />

			<genericcontrol name="ISC_setskills_frame">
				<anchored to="contentanchor">
					<top anchor="bottom" offset="20" />
					<left offset="10" />
					<right offset="-10" />
					<bottom parent="" offset="-80" />
				</anchored>
				<frame name="groupbox" offset="15,15,15,15" />
				<disabled />
			</genericcontrol>

			<genericcontrol name="ISC_setskills_separator">
				<anchored to="ISC_setskills_frame">
					<top offset="27" />
					<left />
					<right />
				</anchored>
				<frame name="headersimple" />
				<disabled />
			</genericcontrol>


			<genericcontrol name="right_anchor">
				<anchored to="contentanchor" position="belowright" offset="0,20" width="0" />
				<invisible />
			</genericcontrol>
			<genericcontrol name="left_anchor">
				<anchored to="contentanchor" position="belowleft" offset="0,20" width="0" />
				<invisible />
			</genericcontrol>


			<button_text name="ISC_button_cancel">
				<anchored to="contentanchor" height="20" width="80">
					<right offset="-110" />
					<bottom parent="" offset="-30" />
				</anchored>
				<state textres="ISC_button_label_cancel" />
			</button_text>
			<button_text name="ISC_button_ok">
				<anchored to="contentanchor" height="20" width="80">
					<right offset="-10" />
					<bottom parent="" offset="-30" />
				</anchored>
				<state textres="ISC_button_label_ok" />
			</button_text>


			<list_text name="ISC_setskills_listframe">
				<anchored to="ISC_setskills_frame">
					<left />
					<top offset="35" />
					<right />
					<bottom  />
				</anchored>
				<columns filldown="true" />
			</list_text>
			<scrollbar_list>
				<anchored to="ISC_setskills_listframe" />
				<target>ISC_setskills_listframe</target>
			</scrollbar_list>


			<label name="ISC_setskills_header_skillname">
				<state textres="ISC_setskills_header_skillname" />
				<anchored to="right_anchor" width="350">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
			</label>
			<label name="ISC_setskills_header_selected">
				<state textres="ISC_setskills_header_selected" />
				<anchored to="left_anchor">
					<top />
					<left anchor="right" relation="relative" offset="15" />
				</anchored>
			</label>

		</sheetdata>
	</windowclass>

	<windowclass name="ISC_setskills_entry">
		<margins control="0,0,0,2" />
		<sheetdata>
			<genericcontrol name="right_anchor">
				<anchored height="0" width="0" offset="0,20">
					<top offset="2" />
					<right />
				</anchored>
			</genericcontrol>
			<genericcontrol name="left_anchor">
				<anchored height="0" width="0">
					<top offset="2" />
					<left />
				</anchored>
			</genericcontrol>

			<string_textlistitem name="ISC_setskills_skillname">
				<anchored to="right_anchor">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
			</string_textlistitem>
			<button_checkbox name="ISC_setskills_selected" value="0">
				<anchored to="ISC_setskills_skillname">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
			</button_checkbox>

		</sheetdata>
	</windowclass>

</root>